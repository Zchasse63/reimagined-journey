# Supabase Configuration
PUBLIC_SUPABASE_URL=your_project_url_here
PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here

# Site URL for CORS configuration
# Use http://localhost:4321 for development, https://valuesource.co for production
PUBLIC_SITE_URL=http://localhost:4321

# Supabase Service Role Key (for API endpoints only - NEVER expose to frontend)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# External API Keys (store in Supabase Secret Manager for Edge Functions)
# EIA_API_KEY=your_eia_key_here
# BLS_API_KEY=your_bls_key_here
# CENSUS_API_KEY=your_census_key_here
# FDA_API_KEY=your_fda_key_here
