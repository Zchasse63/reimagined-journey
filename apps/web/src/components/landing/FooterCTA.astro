---
/**
 * FooterCTA.astro
 * Final conversion section with CTA button and phone number
 *
 * Props:
 * - phoneNumber: string (optional) - Phone number to display (defaults to placeholder)
 */

import { Phone, ArrowRight } from 'lucide-react';
import { SITE_CONFIG } from '@/lib/site-config';

interface Props {
  phoneNumber?: string;
}

const { phoneNumber = SITE_CONFIG.company.phone } = Astro.props;

// Format phone number for tel: link (remove non-digits)
const phoneLink = phoneNumber.replace(/\D/g, '');
---

<section class="section-padding bg-slate-900">
  <div class="container-wide">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Ready to improve your supply chain?
      </h2>
      <p class="text-lg text-slate-300 mb-8">
        Get competitive pricing and reliable delivery for your food service operation.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-6">
        <a
          href="#lead-form"
          class="btn-primary px-8 py-3.5 text-base font-semibold inline-flex items-center"
        >
          Get Your Custom Quote
          <ArrowRight className="w-5 h-5 ml-2" />
        </a>

        <span class="text-slate-400">or</span>

        <a
          href={`tel:${phoneLink}`}
          class="inline-flex items-center text-white hover:text-primary-400 transition-colors font-medium"
        >
          <Phone className="w-5 h-5 mr-2" />
          call {phoneNumber}
        </a>
      </div>

      <p class="text-sm text-slate-400">
        Response within 24 hours on all quote requests.
      </p>
    </div>
  </div>
</section>
