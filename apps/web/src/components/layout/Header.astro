---
import { Menu, X, Phone } from 'lucide-react';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/products', label: 'Products' },
  { href: '/locations', label: 'Locations' },
  { href: '/about', label: 'About' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-slate-200 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/80">
  <div class="container-wide">
    <div class="flex h-16 md:h-[72px] items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-xl">VS</span>
        </div>
        <span class="font-semibold text-xl text-slate-900 hidden sm:block">
          Value Source
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors hover:text-primary-600',
              currentPath === link.href ? 'text-primary-600' : 'text-slate-600',
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Desktop CTA -->
      <div class="hidden md:flex items-center space-x-4">
        <a
          href="tel:+14045551234"
          class="flex items-center text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
        >
          <Phone className="w-4 h-4 mr-2" />
          <span class="hidden lg:inline">(404) 555-1234</span>
        </a>
        <a
          href="#quote"
          class="btn-primary px-5 py-2.5 text-sm"
        >
          Get Quote
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden p-2 text-slate-600 hover:text-slate-900"
        id="mobile-menu-button"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <Menu className="w-6 h-6" id="menu-open-icon" />
        <X className="w-6 h-6 hidden" id="menu-close-icon" />
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="lg:hidden hidden border-t border-slate-200 bg-white"
  >
    <div class="container-wide py-4 space-y-4">
      <nav class="flex flex-col space-y-3">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-base font-medium py-2 transition-colors',
              currentPath === link.href ? 'text-primary-600' : 'text-slate-700 hover:text-primary-600',
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>
      <div class="pt-4 border-t border-slate-200 space-y-3">
        <a
          href="tel:+14045551234"
          class="flex items-center text-base font-medium text-slate-700"
        >
          <Phone className="w-5 h-5 mr-3 text-primary-600" />
          (404) 555-1234
        </a>
        <a
          href="#quote"
          class="btn-primary w-full text-center py-3"
        >
          Get Quote
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
    menuOpenIcon?.classList.toggle('hidden');
    menuCloseIcon?.classList.toggle('hidden');
  });
</script>
