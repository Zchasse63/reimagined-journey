---
import Layout from '@/layouts/Layout.astro';
import { MapPin, Users, TrendingUp, Award, Truck, Clock } from 'lucide-react';

// TODO: Replace with actual company stats
const stats = [
  { label: 'Cities Served', value: '156' },
  { label: 'Product Lines', value: '5,000+' },
  { label: 'Delivery Routes', value: '50+' },
  { label: 'Years in Business', value: '15+' },
];

const values = [
  {
    icon: TrendingUp,
    title: 'Competitive Pricing',
    description: 'We leverage our buying power to offer prices that compete with the big distributors while providing personalized service.',
  },
  {
    icon: Users,
    title: 'Lower Minimums',
    description: 'Unlike large distributors with high minimum orders, we work with businesses of all sizes - from food trucks to multi-location restaurants.',
  },
  {
    icon: Truck,
    title: 'Reliable Delivery',
    description: 'Our strategic delivery routes across the Southeast ensure your orders arrive on time, every time.',
  },
  {
    icon: Clock,
    title: 'Fast Response',
    description: 'Our dedicated team responds quickly to your needs, whether it\'s a quote request or an urgent order change.',
  },
  {
    icon: Award,
    title: 'Quality Products',
    description: 'We source from trusted suppliers to ensure you receive consistent, high-quality products for your operation.',
  },
  {
    icon: MapPin,
    title: 'Local Expertise',
    description: 'With deep roots in the Southeast, we understand the unique needs of businesses in our service area.',
  },
];
---

<Layout
  title="About Us | Value Source Food Service Distribution"
  description="Learn about Value Source - your food service distribution partner serving restaurants, caterers, food trucks, and institutions across the Southeast with competitive pricing and lower minimums."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-16 md:py-24">
    <div class="container-wide">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Your Partner in Food Service Distribution
        </h1>
        <p class="text-xl text-slate-300">
          Value Source is a food service distributor serving restaurants, caterers, food trucks,
          and institutions across the Southeast United States. We combine competitive pricing
          with personalized service to help your business thrive.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b border-slate-200">
    <div class="container-wide">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">{stat.value}</div>
            <div class="text-slate-600 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-16 md:py-24 bg-slate-50">
    <div class="container-wide">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8 text-center">
          Our Story
        </h2>
        <div class="prose prose-lg prose-slate max-w-none">
          <p class="text-slate-600 text-lg leading-relaxed mb-6">
            Value Source was founded with a simple mission: to provide food service businesses
            with the products they need at prices they can afford, without the barriers that
            large distributors often create.
          </p>
          <p class="text-slate-600 text-lg leading-relaxed mb-6">
            We understand the challenges facing restaurants, caterers, food trucks, and
            institutional food service operations. High minimum orders, inflexible delivery
            schedules, and impersonal service from big distributors can make it difficult
            for businesses to get what they need when they need it.
          </p>
          <p class="text-slate-600 text-lg leading-relaxed">
            That's why we've built our business around flexibility and service. Whether you're
            a single-location restaurant just getting started or a multi-unit operation looking
            for a distribution partner who actually listens, Value Source is here to help your
            business succeed.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container-wide">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-12 text-center">
        Why Choose Value Source
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {values.map((value) => (
          <div class="p-6 rounded-2xl border border-slate-200 hover:border-primary-200 hover:shadow-lg transition-all">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
              <value.icon className="w-6 h-6 text-primary-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">{value.title}</h3>
            <p class="text-slate-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Area Section -->
  <section class="py-16 md:py-24 bg-slate-50">
    <div class="container-wide">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
          Serving the Southeast
        </h2>
        <p class="text-xl text-slate-600 mb-8">
          Our delivery network spans across Georgia, Florida, Tennessee, Alabama, South Carolina,
          North Carolina, and surrounding areas. With strategic distribution routes, we ensure
          reliable service throughout our coverage area.
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          {['Georgia', 'Florida', 'Tennessee', 'Alabama', 'South Carolina', 'North Carolina', 'Mississippi', 'Louisiana'].map((state) => (
            <span class="px-4 py-2 bg-white rounded-full text-slate-700 font-medium border border-slate-200">
              {state}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="container-wide text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Ready to Work Together?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Get a custom quote tailored to your business needs. No minimum order requirements to get started.
      </p>
      <a
        href="/#lead-form"
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white text-primary-600 rounded-xl hover:bg-primary-50 transition-colors"
      >
        Get Your Custom Quote
      </a>
    </div>
  </section>
</Layout>
